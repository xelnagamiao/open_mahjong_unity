{
  "name": "mahjong-web-now",
  "version": "1.0.0",
  "description": "麻将分析网站 - 基于Node.js和Vue3的现代化版本",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "pm2:start": "pm2 start server/index.js --name salasasa-web",
    "pm2:stop": "pm2 stop salasasa-web",
    "pm2:restart": "pm2 restart salasasa-web",
    "pm2:delete": "pm2 delete salasasa-web"
  },
  "keywords": ["mahjong", "vue3", "nodejs", "express", "麻将"],
  "author": "salasasa.cn Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "socket.io": "^4.7.4",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
} 